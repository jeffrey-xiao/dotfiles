#!/bin/sh

set -euo pipefail

__help="Usage: ${0##*/} [OPTIONS]

Prints the CPU temperature.

Options:
  -h, --help    display this help and exit"

while [ ! $# -eq 0 ]; do
  case "$1" in
    -h | --help)
      echo "$__help"
      exit 0
      ;;
    *)
      break;
      ;;
  esac
  shift
done

[ -z "$*" ] || { echo "Error: unexpected positional arguments: $*." && exit 1; }

echo $(($(cat /sys/class/thermal/thermal_zone0/temp) / 1000))Â°C

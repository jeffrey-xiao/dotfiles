# Directories.
ncmpcpp_directory = ~/.config/ncmpcpp
lyrics_directory = ~/.config/ncmpcpp/lyrics

# Connection settings.
mpd_host = ~/.config/mpd/socket
mpd_port = 6600
mpd_connection_timeout = 5

# Needed for tag editor and file operations to work.
mpd_music_dir = ~/Music
mpd_crossfade_time = 5

# Music visualizer options.
visualizer_fifo_path = "/tmp/mpd.fifo"
visualizer_output_name = "Visualizer feed"
visualizer_in_stereo = yes
visualizer_type = spectrum
visualizer_look = ●▮
visualizer_color = 7

# Highlighting always on.
playlist_disable_highlight_delay = 0

# Formatting settings.
song_list_format = "$8 {%l}$8 |$7 {%a} $8»$6 {{%t}|{%f}} $R $4{%b}"
song_status_format = {%a - }{%b - }{{%t}|{%f}}
song_library_format = {%t}|{%f}

now_playing_prefix = $b
now_playing_suffix = $/b

selected_item_prefix = $6
selected_item_suffix = $9
modified_item_prefix = $3> $9

song_window_title_format = {%a - }{{%t}|{%f}}
song_columns_list_format = "(5f)[8]{l} (30)[7]{a} (50)[6]{t|f:Title} (10)[4]{b}"

# Display modes for various panes.
playlist_display_mode = classic
browser_display_mode = columns
search_engine_display_mode = classic
playlist_editor_display_mode = classic
user_interface = classic

# Progress bar appearance.
progressbar_look = "─╼ "

# Startup settings.
startup_screen = visualizer
startup_slave_screen = playlist
startup_slave_screen_focus = no
locked_screen_width_part = 40
ask_for_locked_screen_width_part = yes
jump_to_now_playing_song_at_start = yes

# External settings.
search_engine_default_search_mode = 1
external_editor = vim
use_console_editor = yes

# Color settings.
colors_enabled = yes
empty_tag_color = 7
header_window_color = 7
volume_color = 7
state_line_color = 7

state_flags_color = default

main_window_color = 4
current_item_prefix = "$(4)$r"
current_item_suffix = "$/r$(end)"

color1 = 7
color2 = 7

statusbar_color = 7
active_window_border = 2
window_border_color = 2

# Tag settings.
empty_tag_marker = ""
tags_separator = " | "
tag_editor_extended_numeration = no
default_tag_editor_pattern = %n - %t
media_library_primary_tag = artist

# UI settings.
discard_colors_if_item_is_selected = yes
enable_window_title = yes
header_visibility = yes
statusbar_visibility = yes
titles_visibility = no

display_volume_level = yes
display_bitrate = no
display_remaining_time = no
clock_display_seconds = no

# Other settings.
mouse_support = no
mouse_list_scroll_whole_page = no
ignore_leading_the = yes
allow_for_physical_item_deletion = yes
execute_on_song_change = "ps -ef | grep 'display-album-art' | grep --invert-match grep | awk '{print $2}' | xargs --no-run-if-empty kill -USR1"

#!/bin/sh

if [ "$1" = '-r' ]; then
  restart=true
  shift
fi

[ -z "$1" ] && { echo 'Error: Argument 1 must be a process name.' && exit 1; }

process=$1
script=${2:-$1}

if [ $restart ]; then
  killall --quiet "$process"
  while pgrep --exact "$process" >/dev/null; do sleep 1; done
fi

pgrep --exact "$process" >/dev/null || eval "$script"

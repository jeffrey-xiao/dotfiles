def_key "J"
  select_item
  scroll_down

def_key "K"
  select_item
  scroll_up

def_key "ctrl-d"
  page_down
def_key "ctrl-u"
  page_up

def_key "j"
  scroll_down
def_key "k"
  scroll_up
def_key "h"
  previous_column
def_key "l"
  next_column

def_key "m"
  move_sort_order_down
def_key "m"
  move_selected_items_down
def_key ","
  move_sort_order_up
def_key ","
  move_selected_items_up

def_key "."
  show_lyrics

def_key "n"
  next_found_item
def_key "N"
  previous_found_item

